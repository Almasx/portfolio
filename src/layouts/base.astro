---
import Me from "~/components/me.astro";
import { ViewTransitions } from "astro:transitions";
import PostHog from "~/components/analytics.astro";
import { Cursor } from "~/components/cursor";
import { SEO } from "astro-seo";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <SEO
      {title}
      description="Almas Sapar, 0 -> 1, Design Engineer, Software Developer, UI/UX Design, US, Frontend, React, Next.js, Astro.js, Tailwind CSS"
      openGraph={{
        basic: {
          title: "Hey! My name is Sapar Almas. Let's connect.",
          type: "Portfolio",
          image: "https://sapar.me/social-media/og.png",
        },
      }}
      twitter={{
        creator: "@AlmasX5",
      }}
      extend={{
        link: [{ rel: "icon", href: "/favicon.ico" }],
        meta: [
          {
            name: "twitter:image",
            content: "https://sapar.me/social-media/twitter.png",
          },
          { name: "twitter:title", content: "Almas Sapar Portfolio" },
          {
            name: "twitter:description",
            content:
              "Hey! My name is Sapar Almas and i am Design Engineer. Let's connect.",
          },
        ],
      }}
    />
    <ViewTransitions />

    <PostHog />
  </head>
  <body class="flex flex-col gap-0.5 bg-neutral-50 md:flex-row md:pt-0 pt-14">
    <Me />
    <slot class="grow" />
    <Cursor client:load />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "GeistVF";
    src: url("/fonts/GeistVF.woff") format("woff");
  }

  @font-face {
    font-family: "GeistMonoVF";
    src: url("/fonts/GeistMonoVF.woff") format("woff");
  }

  html {
    font-family: "GeistVF", sans-serif;
  }

  code {
    font-family: "GeistMonoVF", monospace;
  }
</style>
